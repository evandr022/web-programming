{{!< main}}
<div class="container mt-4">
    <h1>Cursos</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Sigla</th>
                <th>Nome</th>
                <th>Opções</th>
            </tr>
        </thead>
        <tbody>
            {{#each majors}}
            <tr>
                <td>{{this.code}}</td>
                <td>{{this.name}}</td>
                <td>
                    <a href="/major/read/{{this.id}}" class="btn btn-primary btn-sm">Ver</a>
                    <a href="/major/update/{{this.id}}" class="btn btn-warning btn-sm">Editar</a>
                    <form action="/major/remove/{{this.id}}" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Remover</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <a href="/major/create" class="btn btn-success mt-3">Adicionar Novo Curso</a>
</div>
